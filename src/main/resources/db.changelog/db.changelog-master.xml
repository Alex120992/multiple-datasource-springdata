<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
        <preConditions>
<!--            Тип базы-->
            <dbms type="postgresql"/>
        </preConditions>

<!--    Соответсвует пустой БД-->
    <changeSet id="0" author="Zateev Aleksey">
<!--        Mark  before its we can rollback-->
        <tagDatabase tag="db_init"/>
    </changeSet>

<!--   relativeToChangelogFile - save относительный path to file содержит скрипты -->
    <include file="/v-1.0/db.changelog-v.1.0.xml" relativeToChangelogFile="true"/>

<!--    Соответсвует БД версии 1.0 , теперь можем откатываться сюда или в пустую базу данных смотри выше-->
    <changeSet id="4" author="Zateev Aleksey">
        <tagDatabase tag="v-1.0"/>
    </changeSet>
</databaseChangeLog>